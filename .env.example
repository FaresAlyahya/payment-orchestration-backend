# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=payment_orchestration
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Moyasar Configuration
MOYASAR_API_KEY=your_moyasar_test_api_key
MOYASAR_API_URL=https://api.moyasar.com/v1
MOYASAR_WEBHOOK_SECRET=your_webhook_secret

# API Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend Dashboard URL (from Lovable)
FRONTEND_URL=https://your-lovable-dashboard.lovable.app
